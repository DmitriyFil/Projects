<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/bg"
    >
        <LinearLayout
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/g2048"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/app_name"
                    android:textColor="@color/title"
                    android:textSize="@dimen/appNameSize"
                    android:layout_weight="1"
            />
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scoreView"
                            android:layout_weight="1"
                    />
                    <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bestView"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                >
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:id="@+id/score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/btn1"
                            android:layout_marginEnd="5dp"
                            android:background="@color/gameBoard"
                            android:textColor="#B2FF59"
                            android:textSize="20sp"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                    />
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:id="@+id/best"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/btn1"
                            android:background="@color/gameBoard"
                            android:textColor="#CE3608"
                            android:textSize="20sp"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                    />
                </LinearLayout>
                <TextView
                        android:id="@+id/resetBest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resetBtn"
                        android:layout_gravity="end"
                        android:layout_marginEnd="20dp"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        android:background="#61FFD740"
                        android:padding="3dp"
                        android:visibility="invisible"
                />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"

        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/text1"
                    android:textColor="@color/title"
                    android:textSize="@dimen/text1Size"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/str2"
                    android:text="@string/text2"
                    android:fontFamily="cursive"
                    android:textSize="@dimen/text2Size"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text3"
                    android:background="@color/bg"
                    android:textAlignment="textStart"
                    android:textColor="@color/restart"
                    android:textSize="25sp"
                    android:id="@+id/restart"/>
            <TextView
                    android:id="@+id/err"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/version"
                    android:gravity="center"
                    android:textColor="@color/yelow"

            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text4"
                    android:textColor="@color/restart"
                    android:textSize="25sp"
                    android:background="@color/bg"
                    android:id="@+id/undo"/>
        </LinearLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginBottom="25dp"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/gameBoard"
            >
                <LinearLayout
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                >
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/btnColor"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/b0"
                            android:textSize="@dimen/numberSize"
                    />
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/btnColor"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/b1"
                            android:textSize="@dimen/numberSize"

                    />
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/btnColor"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/b2"
                            android:textSize="@dimen/numberSize"

                    />
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/btnColor"
                            android:id="@+id/b3"
                            android:textSize="@dimen/numberSize"

                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                >
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/btnColor"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/b4"
                            android:textSize="@dimen/numberSize"

                    />
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/btnColor"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/b5"
                            android:textSize="@dimen/numberSize"

                    />
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/btnColor"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/b6"
                            android:textSize="@dimen/numberSize"

                    />
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/btnColor"
                            android:id="@+id/b7"
                            android:textSize="@dimen/numberSize"

                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                >
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/btnColor"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/b8"
                            android:textSize="@dimen/numberSize"

                    />
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/btnColor"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/b9"
                            android:textSize="@dimen/numberSize"

                    />
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/btnColor"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/b10"
                            android:textSize="@dimen/numberSize"

                    />
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/btnColor"
                            android:id="@+id/b11"
                            android:textSize="@dimen/numberSize"

                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                >
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/btnColor"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/b12"
                            android:textSize="@dimen/numberSize"

                    />
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/btnColor"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/b13"
                            android:textSize="@dimen/numberSize"

                    />
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/btnColor"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/b14"
                            android:textSize="@dimen/numberSize"

                    />
                    <Button
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/btnColor"
                            android:id="@+id/b15"
                            android:textSize="@dimen/numberSize"

                    />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                    android:id="@+id/game"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
            <TextView
                    android:id="@+id/gameOver"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/gameOver"
                    android:textStyle="bold"
                    android:textSize="50sp"
                    android:gravity="center"
                    android:textColor="#E01111"
                    android:background="#5E917168"
                    android:visibility="invisible"
                    android:fontFamily="casual"
            />
            <Button
                    android:id="@+id/win"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/gameWin"
                    android:textStyle="bold"
                    android:textSize="50sp"
                    android:gravity="center"
                    android:textColor="#FFEB3B"
                    android:background="#B2009688"
                    android:visibility="invisible"
                    android:fontFamily="cursive"
            />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/bestMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#61919191"
            android:visibility="invisible"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
        />
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        android:background="#59E99A"
                        android:paddingBottom="10dp"
                >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/resetText"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                    />
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                    >
                        <Button
                                style="?android:attr/buttonBarStyle"
                                android:id="@+id/menuYes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/agreeBtn"
                                android:layout_weight="1"
                                android:layout_marginStart="40dp"
                                android:layout_marginEnd="20dp"
                                android:background="#FCC036"
                        />
                        <Button
                                style="?android:attr/buttonBarStyle"
                                android:id="@+id/menuNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/disagreeBtn"
                                android:layout_weight="1"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="40dp"
                                android:background="#F82323"
                        />
                    </LinearLayout>
                </LinearLayout>
                <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                />
            </LinearLayout>

        </FrameLayout>



    </LinearLayout>

</FrameLayout>